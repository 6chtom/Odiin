{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
	"type": "shell",
	"group": "build",
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": true,
		"clear": false,
		"revealProblems": "onProblem"
	},
	"options": {
		"cwd": "${workspaceFolder}"
	},
	"problemMatcher": {
		"owner": "cpp",
		"fileLocation": ["relative", "${workspaceFolder}"],
		"pattern": {
		  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|fatal error):\\s+(.*)$",
		  "file": 1,
		  "line": 2,
		  "column": 3,
		  "severity": 4,
		  "message": 5
		}
	},
    "tasks": [
        {
            "label": "Build (Debug)",
            "command": "make DEBUG=1"
        },
        {
            "label": "Clean",
            "command": "make clean"
		},
		{
			"label": "Build Bootloader",
			"command": "make bootloader"
		},
        {
            "label": "Clean Bootloader",
            "command": "make clean_bootloader"
        },
        {
            "label": "Build & Flash (Release)",
            "command": "make flash_all"
        },
        {
            "label": "Build (Release UF2)",
            "command": "make release",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (Release UF2 with Debugging)",
            "command": "make release DEBUG=1",
        },
        {
            "label": "Erase Target Controller",
            "command": "make erase"
		},
		{
			"label": "Generate compile_commands.json",
			"command": "compiledb make release",
		}
    ]
}
